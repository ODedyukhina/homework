//try it p.101
const myName = "Sasha";
let name;
const momName = "Anelia";
const dadName = "Misha";

if (name === myName) {
    console.log("Hello Sasha")
}
else if (name === momName) {
    console.log("Hello Mom")
}
else if (name === dadName){
    console.log("Hello Dad");
}
else {
    console.log("Hello Stranger")
}
name = "Mark";
